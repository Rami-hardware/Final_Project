<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fcfcfc"
    android:padding="10sp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back"
        android:textSize="20sp"
        android:layout_gravity="left"
        android:clickable="true"
        android:onClick="Welcoming_User"
        android:textStyle="bold|italic"/>
        <!--android:background="@drawable/edittextbackground"-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >


    </LinearLayout>
    <LinearLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/l1">
        <!--android:background="@color/backgroundcolor"-->


        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="TrackingLocation"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:padding="100dp"
                    android:background="@drawable/map"
                    android:src="@drawable/map"/>


                <TextView
                    android:layout_width="90sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Pair Watch"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    />
                <!--android:background="@color/lightgray"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Choose Your \nWatch TobBe Paired"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
                    <!--android:textColor="@color/gray"-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="160sp"
            android:layout_height="190sp"
            android:layout_margin="10sp"
            android:onClick="HeartRate"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:background="@drawable/smartwatch"
                    android:src="@drawable/smartwatch"
                    android:padding="10sp"
                    />

                <TextView
                    android:layout_width="90sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Watch face"
                    android:textAlignment="center"
                    android:textSize="15sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_gravity="center"
                    android:layout_margin="10sp"
                    />
                <!--android:background="@color/lightgray"-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Select Between\n12 or 24 Hour Format"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
                    <!--android:textColor="@color/gray"-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="100dp"
            android:id="@+id/l2">
            <!--android:background="@color/backgroundcolor"-->

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160sp"
                android:layout_height="190sp"
                android:onClick="Notifactions"
                android:layout_margin="10sp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="64sp"
                        android:layout_height="64sp"
                        android:src="@drawable/heart"
                        android:padding="10sp"
                        />
                    <!--android:background="@drawable/circle4red"-->

                    <TextView
                        android:layout_width="99sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Heart Rate"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        />
                    <!--android:background="@color/lightgray"-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Checkout BPM"
                        android:textSize="15sp"
                        android:textStyle="bold"/>
                        <!--android:textColor="@color/gray"-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/l3">
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="160sp"
                android:layout_height="190sp"
                android:layout_margin="10sp"
                android:onClick="Alarm"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="64sp"
                        android:layout_height="64sp"
                        android:src="@drawable/heart"
                        android:padding="10sp"
                        />

                    <!--android:background="@drawable/circle2green"-->

                    <TextView
                        android:layout_width="79sp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:text="Alarm"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_gravity="center"
                        android:layout_margin="10sp"
                        />
                    <!--android:background="@color/lightgray"-->


                    <TextView
                        android:layout_width="114sp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Set An Alarm"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <!--android:textColor="@color/gray"-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>
</LinearLayout>